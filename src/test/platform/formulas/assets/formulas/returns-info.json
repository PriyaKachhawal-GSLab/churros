{
    "name": "returns-info",
    "steps": [
        {
            "onSuccess": [],
            "onFailure": [],
            "name": "simple-script",
            "type": "script",
            "properties": {
                "mimeType": "application/javascript",
                "body": "done(info);"
            }
        }
    ],
    "triggers": [
