{
  "name": "simple-filter-formula",
  "configuration": [{
    "key": "trigger_instance",
    "name": "trigger_instance",
    "type": "elementInstance"
  }],
  "triggers": [{
    "type": "event",
    "onSuccess": ["simple-filter"],
    "properties": {
      "elementInstanceId": "${config.trigger_instance}"
    }
  }],
  "steps": [{
    "name": "simple-filter",
    "type": "filter",
    "properties": {
      "body": "done(true);"
    }
  }]
}
