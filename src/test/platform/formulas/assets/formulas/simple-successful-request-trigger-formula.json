{
    "name": "simple-successful",
    "steps": [
        {
            "onSuccess": [],
            "onFailure": [],
            "name": "simple-script",
            "type": "script",
            "properties": {
                "body": "var id = trigger.response.body[0].Id; var test = { \"integration-test-1\": 1,\n \"integration-test-2\": true,\n             \"integration-test-3\": \"integration-value\",  \"trigger-test\": id };\n      \ndone(test);" 
            }
        }
    ],
    "triggers": [
        {
            "type": "elementRequest",
            "async": true,
            "onSuccess": ["simple-script"],
            "onFailure": [],
            "properties": {
                "method": "GET",
                "api": "/hubs/crm/accounts",
                "elementInstanceId": "${trigger-instance}"
            }
        }
    ],
    "active": true,
    "singleThreaded": false,
    "configuration": [
        {
            "key": "notification.email",
            "name": "Notification Email",
            "type": "value",
            "description": "Optional email where formula errors and notification steps will be sent (If more than one email is needed, separate each email with a comma)",
            "required": false
        },
        {
            "key": "trigger-instance",
            "name": "trigger-instance",
            "type": "elementInstance",
            "required": true
        }
    ]
}
