{
    "name": "complex-successful",
    "steps": [
        {
            "onSuccess": [],
            "onFailure": [],
            "name": "end",
            "type": "filter",
            "properties": {
                "body": "return true;"
            }
        },
        {
            "onSuccess": [
                "notify-me-always"
            ],
            "onFailure": [],
            "name": "get-instances",
            "type": "request",
            "properties": {
                "api": "/instances",
                "retry": "false",
                "method": "GET"
            }
        },
        {
            "onSuccess": [
                "retrieve-contact"
            ],
            "onFailure": [
                "end"
            ],
            "name": "looper",
            "type": "loop",
            "properties": {
                "list": "${steps.ten-ids-please.ids}"
            }
        },
        {
            "onSuccess": [],
            "onFailure": [
                "looper"
            ],
            "name": "invalid-request-step",
            "type": "request",
            "properties": {
                "api": "/nosuchresource",
                "retry": "false",
                "method": "GET"
            }
        },
        {
            "onSuccess": [
                "get-contacts"
            ],
            "onFailure": [],
            "name": "setup-page-parameters",
            "type": "script",
            "properties": {
                "body": "return {page: 1, pageSize: 200};"
            }
        },
        {
            "onSuccess": [
                "ten-ids-please"
            ],
            "onFailure": [],
            "name": "get-contacts",
            "type": "elementRequest",
            "properties": {
                "api": "/hubs/crm/contacts",
                "retry": "false",
                "elementInstanceId": "${trigger-instance}",
                "method": "GET",
                "query": "${steps.setup-page-parameters}"
            }
        },
        {
            "onSuccess": [
                "setup-page-parameters"
            ],
            "onFailure": [],
            "name": "return-true",
            "type": "filter",
            "properties": {
                "body": "return true;"
            }
        },
        {
            "onSuccess": [
                "invalid-request-step"
            ],
            "onFailure": [],
            "name": "notify-me-always",
            "type": "notification",
            "properties": {
                "body": "return true;"
            }
        },
        {
            "onSuccess": [
                "looper"
            ],
            "onFailure": [],
            "name": "retrieve-contact",
            "type": "elementRequest",
            "properties": {
                "api": "/hubs/crm/contacts/{entry}",
                "path": "${steps.looper}",
                "retry": "false",
                "elementInstanceId": "${trigger-instance}",
                "method": "GET",
                "acceptableStatusCodes": ""
            }
        },
        {
            "onSuccess": [
                "get-instances"
            ],
            "onFailure": [],
            "name": "ten-ids-please",
            "type": "script",
            "properties": {
                "body": "var contacts = steps['get-contacts'].response.body;\nvar response = {ids:[]};\n\n// only care about 10 of these bad boyz...\nfor (var i = 0; i < 10; i ++) {\n  var c = contacts[i];\n  response.ids.push(c.Id);\n}\n\nreturn response;"
            }
        }
    ],
    "triggers": [
        {
            "type": "event",
            "onSuccess": [
                "return-true"
            ],
            "onFailure": [],
            "properties": {
                "elementInstanceId": "${trigger-instance}"
            }
        }
    ],
    "configuration": [
        {
            "key": "trigger-instance",
            "name": "Trigger Instance",
            "type": "elementInstance",
            "description": "The element instance that triggers the formula"
        }
    ]
}
