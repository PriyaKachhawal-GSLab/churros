{
    "active": true,
    "configuration": [
        {
            "key": "trigger-instance",
            "name": "trigger-instance",
            "required": true,
            "type": "elementInstance"
        },
        {
            "key": "resource.name",
            "name": "resource.name",
            "required": true,
            "type": "value"
        }
    ],
    "name": "element-request-with-configured-api-successful",
    "singleThreaded": false,
    "steps": [
        {
            "name": "delete-accounts",
            "onFailure": [],
            "onSuccess": [],
            "properties": {
                "acceptableStatusCodes": "200",
                "api": "/hubs/crm/${config.resource.name}/${steps.delete-accounts-path.id}",
                "elementInstanceId": "${config.trigger-instance}",
                "method": "DELETE",
                "retry": "true",
                "retryAttempts": "3",
                "retryDelay": "200",
                "retryStatusCodes": "400,500,503"
            },
            "type": "elementRequest"
        },
        {
            "name": "delete-accounts-path",
            "onFailure": [],
            "onSuccess": [
                "delete-accounts"
            ],
            "properties": {
                "body": "var path = { \"id\": steps['get-accounts'].response.body[0].id }\n\ndone(path);"
            },
            "type": "script"
        },
        {
            "name": "get-accounts",
            "onFailure": [],
            "onSuccess": [
                "delete-accounts-path"
            ],
            "properties": {
                "acceptableStatusCodes": "200",
                "api": "/hubs/crm/${config.resource.name}",
                "elementInstanceId": "${config.trigger-instance}",
                "method": "GET",
                "query": "${steps.get-accounts-query.query}",
                "retry": "true",
                "retryAttempts": "3",
                "retryDelay": "200",
                "retryStatusCodes": "400,500,503"
            },
            "type": "elementRequest"
        },
        {
            "name": "get-accounts-query",
            "onFailure": [],
            "onSuccess": [
                "get-accounts"
            ],
            "properties": {
                "body": "var accounts = steps['post-accounts'].response.body\n\nvar query = { \"query\": { \"where\": \"name='\" + accounts.name + \"'\" } };\n\ndone(query);"
            },
            "type": "script"
        },
        {
            "name": "post-accounts",
            "onFailure": [],
            "onSuccess": [
                "get-accounts-query"
            ],
            "properties": {
                "api": "/hubs/crm/${config.resource.name}",
                "body": "${steps.post-accounts-payload.accounts}",
                "elementInstanceId": "${config.trigger-instance}",
                "method": "POST",
                "retry": "true",
                "retryAttempts": "3",
                "retryDelay": "200",
                "retryStatusCodes": "400,500,503"
            },
            "type": "elementRequest"
        },
        {
            "name": "post-accounts-payload",
            "onFailure": [],
            "onSuccess": [
                "post-accounts"
            ],
            "properties": {
                "body": "var accounts = { \"accounts\": {\n  \"name\": \"formula-churros\"}};\n\ndone(accounts);\n\n"
            },
            "type": "script"
        }
    ],
    "triggers": [
        {
            "async": true,
            "name": "trigger",
            "onFailure": [],
            "onSuccess": [
                "post-accounts-payload"
            ],
            "properties": {},
            "type": "manual"
        }
    ]
}
