{
  "name": "nested-loop",
  "configuration": [{
    "key": "trigger-instance",
    "name": "trigger-instance",
    "type": "elementInstance"
  }],
  "triggers": [{
    "type": "event",
    "onSuccess": ["create-list"],
    "properties": {
      "elementInstanceId": "${trigger-instance}"
    }
  }],
  "steps": [{
      "name": "create-list",
      "type": "script",
      "onSuccess": ["loop-1"],
      "properties": {
        "body": "var arr = [];  for (var i = 0; i < 2; i++) {    arr.push({ 'val': Math.random() });  }   done({ 'list': arr });"
      }
    },
    {
      "name": "loop-1",
      "type": "loop",
      "onSuccess": ["silly-script-1"],
      "properties": {
        "list": "${steps.create-list.list}"
      }
    },
    {
      "name": "silly-script-1",
      "type": "script",
      "onSuccess": ["loop-2"],
      "properties": {
        "body": "done({index: steps['loop-1'].index});"
      }
    },
    {
      "name": "loop-2",
      "type": "loop",
      "onSuccess": ["silly-script-2"],
      "onFailure": ["loop-1"],
      "properties": {
        "list": "${steps.create-list.list}"
      }
    },
    {
      "name": "silly-script-2",
      "type": "script",
      "onSuccess": ["loop-2"],
      "properties": {
        "body": "done({index: steps['loop-2'].index});"
      }
    }
  ]
}
